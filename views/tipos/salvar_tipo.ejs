<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../comuns/head.ejs",{title:title}) %>
  </head>

  <body>
    
    <%- include("../comuns/menu.ejs",{tipo:"tipos"}) %>

    <div class="container-fluid">
      <div class="row-fluid">
        <form action="<%= url %>" method="post" onSubmit="return validarTipos()">

          <table class="formulario">
            <tr>
              <td class="rotulo">Tipo</td>

              <td>
                <% if(tipoDoMysql){%>
                  <input type='text' id="name" value='<%= tipoDoMysql.tipo %>'name='tipo'/> 
                <% } else{%>
